{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "es2017"
    ],
    "jsx": "react-native",
    "module": "commonjs",
    "rootDir": "./lib",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
  },
  "include": [
    "lib/**/*",
    "lib/jest-config.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],

}
