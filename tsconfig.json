{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "react-native-ama": ["packages/core/src"],
      "@react-native-ama/core": ["packages/core/src/*"]
    },
    "jsx": "react",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "include": ["packages"],
  "exclude": [
    "examples",
    "dist",
    "src",
    "node_modules",
    "__mocks__",
    "**/**.test.ts",
    "**/**.test.tsx"
  ]
}
